{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "build",
    "allowJs": true,
    "types": ["element-plus/global"]
  },
  "exclude": ["node_modules", "build/**/*"],

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
